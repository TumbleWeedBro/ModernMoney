title: Home
layout: 'base.njk'
---

{# random images src="//unsplash.it/510" #}
<div class="container">
	<div class="mainheading">
		<h1 class="sitetitle">Money Modern</h1>
		<p class="lead">
			 Let's talk about money, road to a million
		</p>
	</div>
<!-- categories section  -->
	<section class="py-5">
		<div class="container mt-4">
			<!-- Money Mindset Section -->
			<div class="CategorySection p-4 rounded mb-4" style="background-color: #E3F2FD;">
				<div class="d-flex align-items-center justify-content-between" data-bs-toggle="collapse" data-bs-target="#moneyMindset" aria-expanded="false" aria-controls="moneyMindset" style="cursor: pointer;">
					<span class="text-dark text-decoration-none fs-4 fw-bold">Money Mindset</span>
					<div class="tag-container">
						<span class="badge rounded-pill border border-dark text-dark me-2">Wealth</span>
						<span class="badge rounded-pill border border-dark text-dark me-2">Mindset</span>
						<span class="badge rounded-pill border border-dark text-dark me-2">Growth</span>
						<span class="badge rounded-pill border border-dark text-dark">Success</span>
					</div>
				</div>
				<div id="moneyMindset" class="collapse mt-3">
					<p>Transform your thinking about money. Embrace abundance and watch your financial dreams take flight!</p>
					<button class="btn btn-outline-dark">Learn More</button>
				</div>
			</div>

			<!-- Smart Investing Section -->
			<div class="CategorySection p-4 rounded mb-4" style="background-color: #F7FBFC;">
				<div class="d-flex align-items-center justify-content-between" data-bs-toggle="collapse" data-bs-target="#smartInvesting" aria-expanded="false" aria-controls="smartInvesting" style="cursor: pointer;">
					<span class="text-dark text-decoration-none fs-4 fw-bold">Smart Investing</span>
					<div class="tag-container">
						<span class="badge rounded-pill border border-dark text-dark me-2">Invest</span>
						<span class="badge rounded-pill border border-dark text-dark me-2">Strategy</span>
						<span class="badge rounded-pill border border-dark text-dark me-2">Growth</span>
						<span class="badge rounded-pill border border-dark text-dark">Wealth</span>
					</div>
				</div>
				<div id="smartInvesting" class="collapse mt-3">
					<p>Learn strategies to make your money work for you. Smart investing leads to financial freedom!</p>
					<button class="btn btn-outline-dark">Learn More</button>
				</div>
			</div>

			<!-- Budgeting Hacks Section -->
			<div class="CategorySection p-4 rounded mb-4" style="background-color: #FDEDEC;">
				<div class="d-flex align-items-center justify-content-between" data-bs-toggle="collapse" data-bs-target="#budgetingHacks" aria-expanded="false" aria-controls="budgetingHacks" style="cursor: pointer;">
					<span class="text-dark text-decoration-none fs-4 fw-bold">Budgeting Hacks</span>
					<div class="tag-container">
						<span class="badge rounded-pill border border-dark text-dark me-2">Budget</span>
						<span class="badge rounded-pill border border-dark text-dark me-2">Savings</span>
						<span class="badge rounded-pill border border-dark text-dark me-2">Tips</span>
						<span class="badge rounded-pill border border-dark text-dark">Finance</span>
					</div>
				</div>
				<div id="budgetingHacks" class="collapse mt-3">
					<p>Master your finances with creative budgeting tips that save you money and time!</p>
					<button class="btn btn-outline-dark">Learn More</button>
				</div>
			</div>
		</div>
	</section>

	<!-- Begin Featured
	================================================== -->
	<section class="featured-posts">
	<div class="section-title">
		<h2><span>Articles</span></h2>
	</div>


	<div class="card-columns listfeaturedtag">

		{%- for post in collections.posts | reverse -%}
		<!-- begin post -->
			{% include 'cardPost.njk' %}
		<!-- end post -->
		{%- endfor -%}


	</div>
	</section>
	<!-- End Featured
	================================================== -->
</div>
