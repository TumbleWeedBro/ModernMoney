{%- set tagArray = tags | split(',') -%}
{%- set postCount = 0 -%}
{%- set tagIndex = 0 -%}
{%- for tag in tagArray %}
    {%- set currentTag = tag %}
    {%- set postsForTag = collections[currentTag] %}
    {%- for post in postsForTag %}
        {%- if postCount < 3 %}
            <!-- Display the post -->
            <div class="col-md-4">
                <div class="card">
                    <a href="{{ post.url }}">
                        <img class="img-fluid img-thumb" src="{{ post.data.image }}" alt="{{ post.data.title }}">
                    </a>
                    <div class="card-block">
                        <h2 class="card-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                        <div class="metafooter">
                            <div class="wrapfooter">
                                <span class="meta-footer-thumb">
                                    <a href="{{ post.data.author }}">
                                        <img class="author-thumb" src="" alt="{{ post.data.author }}">
                                    </a>
                                </span>
                                <span class="author-meta">
                                    <span class="post-name"><a href="{{ post.data.author }}">{{ post.data.author }}</a></span><br/>
